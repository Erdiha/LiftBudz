{
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "tabWidth": 2,
  "semi": true,
  "useTabs": true,
  "arrowParens": "avoid",
  "requirePragma": false,
  "insertPragma": false,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.d.ts",
        " *.js",
        "*.jsx",
        "*.json",
        "*.css",
        "*",
        "*.json"
      ],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
